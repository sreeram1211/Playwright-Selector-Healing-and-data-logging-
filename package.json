{
  "name": "resilient-auditor",
  "version": "1.0.0",
  "description": "AI-driven self-healing Playwright selectors with automated accessibility auditing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "tsc --noEmit && node --import tsx --no-warnings --test tests/unit/*.test.ts",
    "test:unit": "node --import tsx --no-warnings --test tests/unit/*.test.ts",
    "test:integration": "npx playwright test --project=example",
    "lint": "tsc --noEmit"
  },
  "keywords": [
    "playwright",
    "testing",
    "accessibility",
    "self-healing",
    "a11y",
    "axe-core"
  ],
  "license": "GPL-3.0",
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@playwright/test": "^1.48.0",
    "@types/node": "^25.2.2",
    "tsx": "^4.21.0",
    "typescript": "^5.6.0"
  }
}
